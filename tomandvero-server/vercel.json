{
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 5
    },
  },
  "rewrites": [{ "source": "/api/(.*)", "destination": "/api" }]},
  "version": 2,
  "builds": [
    {
      // Specify file to convert to a serverless function
      "src": "Index.js",
      // Specify the NPM module that is used for the build
      "use": "@now/node"
    }
  ]
}
}